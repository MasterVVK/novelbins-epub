# Flask Configuration
FLASK_ENV=development
FLASK_APP=run_web.py
SECRET_KEY=change-this-to-random-secret-key-in-production

# Database
# SQLite (development)
DATABASE_URL=sqlite:///instance/novel_translator.db
# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/novel_translator

# Celery - Background Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# AI API Keys
# Google Gemini (supports multiple keys separated by comma for rotation)
GEMINI_API_KEYS=your-gemini-api-key-1,your-gemini-api-key-2,your-gemini-api-key-3

# OpenAI GPT
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Ollama (local models)
OLLAMA_BASE_URL=http://localhost:11434

# Parser Configuration
# SOCKS5 proxy (optional, for bypassing geo-blocking)
# PROXY_URL=socks5://username:password@proxy-host:port
CLOUDFLARE_MAX_ATTEMPTS=5
PARSING_TIMEOUT=120

# VNC Configuration (for Selenium browser access)
VNC_DISPLAY=:99
VNC_RESOLUTION=1920x1080x24
VNC_PORT=5900
NOVNC_PORT=6080

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Translation Settings
TRANSLATION_MAX_CONTEXT_CHAPTERS=5
TRANSLATION_DEFAULT_TEMPERATURE=0.7
TRANSLATION_MAX_RETRIES=3

# Editing Settings
EDITING_DEFAULT_THREADS=3
EDITING_MAX_THREADS=10

# EPUB Settings
EPUB_DEFAULT_LANGUAGE=ru
EPUB_INCLUDE_TOC=true
EPUB_COVER_SIZE=600x800
EPUB_DEFAULT_MODE=bilingual  # bilingual, translation, original
EPUB_BILINGUAL_SEPARATOR=true  # Разделитель между оригиналом и переводом
