#!/bin/bash
#
# Pre-commit hook: –ø—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ —Å–µ–∫—Ä–µ—Ç—ã –∏ –∑–∞–ø—Ä–µ—â—ë–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã
# –£—Å—Ç–∞–Ω–æ–≤–∫–∞: ./scripts/install-hooks.sh
#

set -e

# –¶–≤–µ—Ç–∞ –¥–ª—è –≤—ã–≤–æ–¥–∞
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo -e "${GREEN}üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–º–º–∏—Ç–∞ –Ω–∞ —Å–µ–∫—Ä–µ—Ç—ã...${NC}"

# –ü–æ–ª—É—á–∞–µ–º —Å–ø–∏—Å–æ–∫ staged —Ñ–∞–π–ª–æ–≤
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

BLOCKED=0
WARNED=0

# === 1. –ë–õ–û–ö–ò–†–û–í–ö–ê: –ó–∞–ø—Ä–µ—â—ë–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã ===
BLOCKED_PATTERNS=(
    "^\.env$"
    "^\.env\."
    "\.pem$"
    "\.key$"
    "credentials\.json$"
    "secrets\.json$"
    "\.p12$"
    "\.pfx$"
)

for file in $STAGED_FILES; do
    for pattern in "${BLOCKED_PATTERNS[@]}"; do
        if echo "$file" | grep -qE "$pattern"; then
            echo -e "${RED}‚ùå –ó–ê–ë–õ–û–ö–ò–†–û–í–ê–ù–û: $file${NC}"
            echo "   –≠—Ç–æ—Ç —Ñ–∞–π–ª –º–æ–∂–µ—Ç —Å–æ–¥–µ—Ä–∂–∞—Ç—å —Å–µ–∫—Ä–µ—Ç—ã –∏ –Ω–µ –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –≤ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–∏."
            BLOCKED=1
        fi
    done
done

# === 2. –ë–õ–û–ö–ò–†–û–í–ö–ê: –ó–∞–ø—Ä–µ—â—ë–Ω–Ω—ã–µ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏ ===
BLOCKED_DIRS=(
    "^uploads/"
    "^logs/"
    "^\.git/"
)

for file in $STAGED_FILES; do
    for pattern in "${BLOCKED_DIRS[@]}"; do
        if echo "$file" | grep -qE "$pattern"; then
            echo -e "${RED}‚ùå –ó–ê–ë–õ–û–ö–ò–†–û–í–ê–ù–û: $file${NC}"
            echo "   –§–∞–π–ª—ã –∏–∑ —ç—Ç–æ–π –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏ –Ω–µ –¥–æ–ª–∂–Ω—ã –±—ã—Ç—å –≤ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–∏."
            BLOCKED=1
        fi
    done
done

# === 3. –ü–†–ï–î–£–ü–†–ï–ñ–î–ï–ù–ò–ï: –ü–∞—Ç—Ç–µ—Ä–Ω—ã —Å–µ–∫—Ä–µ—Ç–æ–≤ –≤ –∫–æ–¥–µ ===
# –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ç–æ–ª—å–∫–æ —Ç–µ–∫—Å—Ç–æ–≤—ã–µ —Ñ–∞–π–ª—ã
SECRET_PATTERNS=(
    "api[_-]?key\s*[=:]\s*['\"][^'\"]{10,}['\"]"
    "password\s*[=:]\s*['\"][^'\"]+['\"]"
    "secret\s*[=:]\s*['\"][^'\"]{10,}['\"]"
    "token\s*[=:]\s*['\"][^'\"]{20,}['\"]"
    "GEMINI_API_KEY\s*=\s*['\"]"
    "OPENAI_API_KEY\s*=\s*['\"]"
    "sk-[a-zA-Z0-9]{20,}"
    "AIza[0-9A-Za-z_-]{35}"
)

# –ü–æ–ª—É—á–∞–µ–º diff staged –∏–∑–º–µ–Ω–µ–Ω–∏–π
DIFF_CONTENT=$(git diff --cached)

for pattern in "${SECRET_PATTERNS[@]}"; do
    MATCHES=$(echo "$DIFF_CONTENT" | grep -iE "^\+" | grep -iE "$pattern" || true)
    if [ -n "$MATCHES" ]; then
        if [ $WARNED -eq 0 ]; then
            echo -e "\n${YELLOW}‚ö†Ô∏è  –í–ù–ò–ú–ê–ù–ò–ï: –û–±–Ω–∞—Ä—É–∂–µ–Ω—ã –≤–æ–∑–º–æ–∂–Ω—ã–µ —Å–µ–∫—Ä–µ—Ç—ã:${NC}"
            WARNED=1
        fi
        echo "$MATCHES" | head -3 | while read -r line; do
            # –ú–∞—Å–∫–∏—Ä—É–µ–º –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª—å–Ω—ã–µ —Å–µ–∫—Ä–µ—Ç—ã –≤ –≤—ã–≤–æ–¥–µ
            MASKED=$(echo "$line" | sed -E 's/([=:]\s*['\''"])[^'\''"]{4}[^'\''"]*/\1*****/g')
            echo -e "   ${YELLOW}$MASKED${NC}"
        done
    fi
done

# === –†–ï–ó–£–õ–¨–¢–ê–¢ ===

if [ $BLOCKED -eq 1 ]; then
    echo -e "\n${RED}üõë –ö–æ–º–º–∏—Ç –æ—Ç–º–µ–Ω—ë–Ω. –£–¥–∞–ª–∏—Ç–µ –∑–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã –∏–∑ staged:${NC}"
    echo "   git reset HEAD <file>"
    echo -e "\n   –ò–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ --no-verify –¥–ª—è –æ–±—Ö–æ–¥–∞ (–Ω–µ —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è):"
    echo "   git commit --no-verify"
    exit 1
fi

if [ $WARNED -eq 1 ]; then
    echo -e "\n${YELLOW}–û–±–Ω–∞—Ä—É–∂–µ–Ω—ã –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª—å–Ω—ã–µ —Å–µ–∫—Ä–µ—Ç—ã –≤ –∫–æ–¥–µ.${NC}"
    echo -n "–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å –∫–æ–º–º–∏—Ç? [y/N]: "

    # –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ —Ç–µ—Ä–º–∏–Ω–∞–ª –¥–ª—è –≤–≤–æ–¥–∞
    if [ -t 0 ]; then
        read -r answer
        if [ "$answer" != "y" ] && [ "$answer" != "Y" ]; then
            echo -e "${RED}–ö–æ–º–º–∏—Ç –æ—Ç–º–µ–Ω—ë–Ω.${NC}"
            exit 1
        fi
    else
        # –ù–µ—Ç —Ç–µ—Ä–º–∏–Ω–∞–ª–∞ (CI/–∞–≤—Ç–æ–º–∞—Ç–∏–∑–∞—Ü–∏—è) - –ø—Ä–æ–ø—É—Å–∫–∞–µ–º
        echo -e "${YELLOW}(–∞–≤—Ç–æ-–ø—Ä–æ–ø—É—Å–∫ –≤ –Ω–µ–∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ–º —Ä–µ–∂–∏–º–µ)${NC}"
    fi
fi

echo -e "${GREEN}‚úÖ –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø—Ä–æ–π–¥–µ–Ω–∞${NC}"
exit 0
